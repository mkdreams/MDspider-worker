{
	"manifest_version": 2,
	"version": "1.0.0.1",
	"name": "MDspider",
	"short_name": "MDS",
	"description": "Tool for data extraction from websites",
	"permissions": ["<all_urls>", "contextMenus", "webRequest", "webRequestBlocking", "declarativeNetRequest", "tabs", "notifications", "system.display","system.memory", "storage", "unlimitedStorage", "downloads", "webNavigation", "cookies", "proxy"],
	"icons": {
		"16": "popup/images/colin.png"
	},
	"browser_action": {
		"default_icon": {
			"16": "popup/images/colin.png"
		},
		"default_title": "MDspider",
		"default_popup": "popup/popup.html"
	},
	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
	"background":{
		"scripts":[
			"common/jquery-2.0.3.js",
			"common/pako.min.js",
			"common/base64.min.js",
	    	"common/function.js",
	    	"background/extension_action.js",
	    	"background/background.js",
	    	"config.js",
	    	"background/run_time_api.js"
    	]
	},
	"content_scripts": [
		{
			"matches": ["*://*/*"],
			"js": [
				"common/jquery-2.0.3.js",
			    "common/base64.min.js",
			    "common/function.js",
				"content/js.cookie.min.js",
				"content/html2canvas.min.js",
			    "content/work.js",
				"content/ajax.record.js"
			],
			"all_frames": false,
			"run_at":"document_start"
		}
	]
}