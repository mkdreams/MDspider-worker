{
	"manifest_version": 2,
	"version": "0.1.0.0",
	"name": "Spider Worder",
	"short_name": "WTH",
	"description": "Tool for data extraction from websites",
	"permissions": ["<all_urls>", "tabs", "notifications", "system.display","system.memory", "storage", "unlimitedStorage", "downloads", "webNavigation", "cookies"],
	"icons": {
		"16": "popup/images/colin.png"
	},
	"browser_action": {
		"default_icon": {
			"16": "popup/images/colin.png"
		},
		"default_title": "Spider Worder",
		"default_popup": "popup/popup.html"
	},
	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
	"background":{
	    "scripts":[
	    	"background/background.js",
	    	"config.js",
	    	"background/jquery-2.0.3.js",
	    	"background/run_time_api.js"
    	]
	},
	"content_scripts": [
		{
			"matches": ["*://*/*"],
			"js": [
				"content/jquery-2.0.3.js",
				"content/js.cookie.min.js",
			    "content/work.js"
			],
			"all_frames": false,
			"run_at":"document_start"
		}
	]
}